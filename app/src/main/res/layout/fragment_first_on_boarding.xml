<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightBlue"
    tools:context=".ui.onboarding.screen.FirstOnBoardingFragment">

    <ImageView
        android:id="@+id/ivOnBoard"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_marginTop="80dp"
        android:contentDescription="@string/on_boarding_one_image"
        android:src="@drawable/landing_page1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="24sp"
        android:fontFamily="@font/comic_sans"
        android:textStyle="bold"
        android:text="@string/on_boarding_title_one"
        app:layout_constraintEnd_toEndOf="@+id/ivOnBoard"
        app:layout_constraintStart_toStartOf="@+id/ivOnBoard"
        app:layout_constraintTop_toBottomOf="@+id/ivOnBoard" />

</androidx.constraintlayout.widget.ConstraintLayout>